{% extends "settings.jinja" %}

{% block settings %}
    <div class="container p-3">
        <form action="{{ url_for('tskin.socket_settings') }}" method="POST">
            <div class="card m-auto w-50">
                <div class="card-header">
                    Socket settings
                </div>
                <div class="card-body pb-4">
                    <div class="d-flex flex-column gap-3">
                        <div class="mb-3">
                            <label for="address" class="form-label">Host</label>
                            <div class="input-group">
                                <span class="input-group-text">tcp://</span>
                                <input type="text" class="form-control" id="host" name="host" value="{{ config.host }}">
                            </div>
                            
                        </div>
                        <div class="mb-3">
                            <label for="port" class="form-label">Port</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="port" name="port" min="1" step="1" value="{{ config.port }}">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="ping" class="form-label">Ping</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="ping" name="ping" min="1" max="10" step="1" value="{{ config.ping }}">
                                <span class="input-group-text">Seconds</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        
        </form>
        
    </div>
{% endblock %}