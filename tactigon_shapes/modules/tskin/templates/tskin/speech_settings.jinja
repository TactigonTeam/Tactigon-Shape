{% extends "settings.jinja" %}

{% block settings %}
    <div class="container p-3">
        <form action="{{ url_for('tskin.speech_settings') }}" method="POST">
            <div class="card m-auto w-50">
                <div class="card-header">
                    Speech settings
                </div>
                <div class="card-body pb-4">
                    <div class="d-flex flex-column gap-3">
                        <div class="mb-3">
                            <label for="address" class="form-label">Scorer</label>
                            <select class="form-select" name="scorer">
                                <option value=""></option>
                                {% for s in scorers %}
                                    <option value="{{ s.name }}" {% if s.name == selected_scorer %}selected{% endif %}>{{ s.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        
        </form>
        
    </div>
{% endblock %}